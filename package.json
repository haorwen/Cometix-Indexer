{
  "name": "cometix-indexer",
  "version": "0.0.1",
  "description": "Cometix Indexer - MCP server for semantic codebase search with Cursor API integration",
  "bin": {
    "cometix-indexer": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:with-token": "node dist/index.js --auth-token",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "cometix",
    "codebase-search",
    "semantic-search",
    "cursor",
    "indexing",
    "code-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anysphere/file-service": "0.0.0-1a538476",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2",
    "protobufjs": "^7.5.4",
    "uuid": "^9.0.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/picomatch": "^4.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": ["dist", "proto", "README.md"]
}
